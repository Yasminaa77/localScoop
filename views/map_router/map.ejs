	<title>Explore</title>
	<style>
		#map {
			height: 400px;
			width: 100%;
		}

		body {
			font-family: Arial, Helvetica, sans-serif;
		}
	</style>
</head>

<body>
	<div id="map"></div>


	<script>
		let map;

		function initMap() {
			let options = {
				zoom: 8, 
				center: { lat: 49.2827, lng: -123.1207 },
			}			

			let map = new google.maps.Map(document.getElementById("map"), options);
			
			window.initMap = initMap;
			
