        h6 {
            margin-top: 0px;
            margin-bottom: 5px;
            margin-left: 10px;
            font-weight: normal;
            font-size:x-small;
        }
    
        .cardDiv {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        .draftImg {
            max-width: 120px;
            max-height: 120px;
        }

        .imgDiv {
            max-width: 120px;
            max-height: 120px;
        }
