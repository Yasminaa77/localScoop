    <style>
        .shop-setup-header {
            padding-top: 15px;
        }

        .p-3 {
            width: 50%;
        }
        .yellow-bn {
            max-width: 80%;
            align-self: flex-end;
        }
        .productCard {
            max-width: 75%;
            max-height: 120px;
            display: flex;
            justify-content: center;
            flex-direction: row;
            align-self: start;
            margin-left:20px;
        }
        p {
            margin: 5px;
            padding:0px;
            font-size: small;
        }
        
        h4 {
            margin-left: 20px;
            /*  */ 
            
            margin-block-start: 1.33em;
            margin-block-end: 1.33em;
            margin-inline-start: 0px;
            margin-inline-end: 0px;
            font-weight: bold;
        }

        h5{
            margin-top: 0px;
            margin-bottom: 5px;
            margin-left: 10px;
            font-weight: normal;
