<header class="seller-shop-header">
    <div class="page-header l-font">
        Sold Products
    </div>
</header>

<body>
    <div class="cardDiv">
        <% for( let index = 0; index < productListInfo.length; index++ ) { %>
            <div class="productCard">
                <div class="imageDiv">
                    <!-- need to give picsum a different photo size so it gives you different photos -->
                    <img src="https://picsum.photos/<%= 100 + parseInt(Math.random() * 10) %>" class="draftImg">
                </div>
                <div class="textdiv">
                    <h6><%= productListInfo[index].itemName %> </h6>
                    <h5><%= productListInfo[index].deliveryStatus %></h5>
                    <h5><%= productListInfo[index].feedbackStatus %></h5>
                    <h6><%= productListInfo[index].time %></h6>
                </div>
            </div>
        <% } %>
    </div>


    <footer>
        <%- include('../elements/seller_footer.ejs',{page:"orders"}) %>
    </footer>


</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
